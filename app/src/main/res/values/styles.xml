<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Key_Style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:onClick">WybranyPrzycisk</item>
        "
    </style>

    <style name="Key_Style.Operation">
        <item name="android:background">@drawable/button_selector_operation</item>
        ></style>


    <style name="Key_Style.Special">
        <item name="android:background">@drawable/button_selector_special</item>
        ></style>

    <style name="Display_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/TL</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/display_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">50sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:inputType">textPersonName</item>
    </style>

</resources>
